<div id="lo_wrapper">
  <div id="lo_metadata">
    <div class="column1">
      <% unless @lo.thumbnail_url.nil? %>
        <img src="<%=@lo.thumbnail_url%>"/>
      <% end %>
      <p class="europeana_link"><a target="_blank" href="<%=@lo.url%>">View resource at Europeana <span class="glyphicon glyphicon-new-window"></span></a></p>
      <p class="powered_by_europeana"><img src="/assets/Europeana_icon.png"/> Powered by Europeana</p>
    </div>
    <div class="column2">
      <% unless @lo.title.nil? %>
        <p class="title"><%= @lo.title %></p>
      <% else %>
        <p class="title">Untitled</p>
      <% end %>
      <% unless @lo.description.nil? %>
        <p class="field_title">Description</p>
        <p class="field_content"><%= @lo.description %></p>
      <% end %>
      <% unless @lo.resource_type.nil? %>
        <p class="field_title">Resource type</p>
        <p class="field_content"><%= @lo.resource_type %></p>
      <% end %>
      <% unless @lo.europeana_collection_name.nil? %>
        <p class="field_title">Europeana Collection</p>
        <p class="field_content"><%= @lo.europeana_collection_name %></p>
      <% end %>
      <% unless @lo.language.nil? %>
        <p class="field_title">Language</p>
        <p class="field_content"><%= @lo.language %></p>
      <% end %>
      <% unless @lo.country.nil? %>
        <p class="field_title">Country</p>
        <p class="field_content"><%= @lo.country %></p>
      <% end %>
      <% unless @lo.year.nil? %>
        <p class="field_title">Year</p>
        <p class="field_content"><%= @lo.year %></p>
      <% end %>
      <% unless @lo.europeana_skos_concept.blank? %>
        <p class="field_title">SKOS concept</p>
        <p class="field_content"><a target="_blank" href="<%=@lo.europeana_skos_concept%>"><%= @lo.europeana_skos_concept %></a></p>
      <% end %>
      <% unless @lo.tag_list.blank? %>
        <p class="field_title">Tags</p>
        <p class="field_content"><%= @lo.tag_list.join(",") %></p>
      <% end %>
    </div>
  </div>
  <div id="lo_suggestions">
    <p class="section_title">Suggested resources</p>
    <div id="suggestions">
      <% @suggestions.each do |lo| %>
        <div>
          <%= render "los/lo_box", lo: lo %>
        </div>
      <% end %>
    </div>
  </div>

</div>

<script>
  $(document).ready(function(){
    $('#suggestions').slick({
      infinite: true,
      slidesToShow: 5,
      slidesToScroll: 1,
      dots: true
    });
  });
</script>