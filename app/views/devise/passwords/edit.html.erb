<div id="session_form">
  <div id="password_forgotten">
    <h2><%=t("devise.passwords.change_password")%></h2>

    <div class="devise_error_messages">
      <%= devise_error_messages! %>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <p><%=t("devise.passwords.new_password")%></p>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
      </div>

      <div class="field">
        <p><%=t("devise.passwords.new_password_confirmation")%></p>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit t("devise.passwords.change_password") %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
