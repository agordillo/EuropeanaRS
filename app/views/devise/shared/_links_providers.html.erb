<% unless EuropeanaRS::Application::config.omniauth_providers.include?(:europeana) %>
  <%= link_to t('devise.links.sign_in_with_provider', provider: "Europeana"), "/users/sign_in/europeana" %><br/>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t('devise.links.sign_in_with_provider', provider: provider.to_s.titleize), user_omniauth_authorize_path(provider.to_sym) %><br/>
  <% end -%>
<% end -%>