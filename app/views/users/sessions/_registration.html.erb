<div id="sign_up">
  <h2><%=t("devise.registrations.new_long")%></h2>

  <div class="devise_error_messages">
    <%= devise_error_messages! %>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field">
      <p><%=t("dictionary.email")%></p>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <p><%=t("dictionary.username")%></p>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <p><%=t("dictionary.language")%></p>
      <%= f.select :language, options_for_select(options_for_select_all_languages, I18n.locale.to_s), {}, { :class => 'account_language' } %>
    </div>

    <div class="field">
      <p><%=t("dictionary.password")%></p>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <p><%=t("devise.registrations.password_confirmation")%></p>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit(t("devise.registrations.new"), {class: "europeanars_button"}) %>
    </div>
  <% end %>
  
</div>